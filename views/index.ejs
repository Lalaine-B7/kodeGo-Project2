<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!--Sweet Alert Codes-->
    <!--JQuery CDN-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!--Sweet Alert CDN-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title><%=header%></title>
</head>
<body class="container">
    <h1><%=header%></h1>
    <table class=" table table-boardered table-striped table-hover">
        <thead class="table-dark">
            <tr>
            <th>ID</th>
            <th>CAR_NAME</th>
            <th>BRAND</th>
            <th>BODY_TYPE</th>
            <th>YEAR</th>
            <th>TRANSMISSION</th>
            <th>TYPE</th>
            <th>ENGINE</th>
            <th>SEAT</th>
            <th>COLOR</th>
            <th>CONDITION</th>
            <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <%records.forEach(function(cars){ %>
                <tr>
                    <td>
                        <%= cars.ID%>
                    </td>
                    <td>
                        <%= cars.CAR_NAME%>
                    </td>
                    <td>
                        <%= cars.BRAND%>
                    </td>
                    <td>
                        <%= cars.BODY_TYPE%>
                    </td>
                    <td>
                        <%= cars.YEAR%>
                    </td>
                    <td>
                        <%= cars.TRANSMISSION%>
                    </td>
                    <td>
                        <%= cars.TYPE%>
                    </td>
                    <td>
                        <%= cars.ENGINE%>
                    </td>
                    <td>
                        <%= cars.SEAT%>
                    </td>
                    <td>
                        <%= cars.COLOR%>
                    </td>
                    <td>
                        <%= cars.CONDITION%>
                    </td>
                    <td>
                        <a class="btn btn-info" href="/edit/<%= cars.ID%>">Edit</a>|
                        <form class="d-sm-inline">
                            <a class="delete btn btn-danger" href="/delete/<%= cars.ID%>">Delete</a>
                        </form>

                    </td>
                </tr>
            <%}) %>
        </tbody>
    </table>
    <a href="/add" class="btn btn-dark"> âž• add </a>
    <% if(isAdd) {%>
        <script>
            Swal.fire(
                'Added New Record!',
                'New File is added',
                'success'
            )
        </script>
        <% } %>
            <script>
                $('.delete').on('click', function(e) {
                    e.preventDefault();
                    var self = $(this);
                    console.log(self.data('title'));
                    Swal.fire({
                        title: 'Confirmation of Deleting the Record',
                        text: "Changes will be Permanent",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: 'Red',
                        cancelButtonColor: 'Green',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            location.href = self.attr('href');
                        }
                    })
                })
            </script>
       
</body>
</html>